{
  "name": "ledgercraft-studio",
  "version": "1.0.1",
  "description": "LedgerCraft Studio - Offline Desktop Accounting Application",
  "main": "dist/electron/main.js",
  "author": "Omprakash Gautam",
  "license": "Proprietary",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron dist/electron/main.js",
    "build": "tsc -p tsconfig.electron.json && vite build --config vite.config.ts && electron-builder --config electron-builder.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build:electron": "tsc -p tsconfig.electron.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^6.4.0",
    "@mui/material": "^6.4.0",
    "@mui/x-tree-view": "^8.27.1",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.8.1",
    "docxtemplater": "^3.68.1",
    "pizzip": "^3.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.0",
    "recharts": "^3.7.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/adm-zip": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pizzip": "^3.0.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.3"
  }
}
