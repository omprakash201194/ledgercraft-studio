{
  "name": "ledgercraft-studio",
  "version": "1.0.0",
  "description": "LedgerCraft Studio - Offline Desktop Accounting Application",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron dist/electron/main.js",
    "build": "tsc -p tsconfig.electron.json && vite build --config vite.config.ts && electron-builder --config electron-builder.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build:electron": "tsc -p tsconfig.electron.json",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mui/icons-material": "^6.4.0",
    "@mui/material": "^6.4.0",
    "better-sqlite3": "^11.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@electron/rebuild": "^3.7.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.1.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "wait-on": "^8.0.3"
  }
}