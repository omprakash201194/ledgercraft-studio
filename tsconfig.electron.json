{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "dist/electron",
        "rootDir": "electron",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "electron"
    ],
    "exclude": [
        "electron/tests/**",
        "electron/**/*.test.ts",
        "electron/**/*.test.tsx",
        "electron/**/*.spec.ts",
        "electron/**/*.spec.tsx"
    ]
}